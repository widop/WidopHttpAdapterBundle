{
    "name": "widop/http-adapter-bundle",
    "description": "Issue HTTP request.",
    "keywords": [ "request", "http" ],
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Widop",
            "email": "contact@widop.com"
        },
        {
            "name": "Eric GELOEN",
            "email": "geloen.eric@gmail.com"
        }
    ],
    "require": {
        "symfony/framework-bundle":  "^2.0|^3.0|^4.0",
        "widop/http-adapter": "1.1.*"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.8",
        "ext-curl": "*",
        "kriswallsmith/buzz": "*",
        "guzzle/guzzle": "*",
        "zendframework/zend-http": "*"
    },
    "autoload": {
        "psr-0": { "Widop\\HttpAdapterBundle": "" }
    },
    "config": {
        "bin-dir": "bin"
    },
    "target-dir": "Widop/HttpAdapterBundle",
    "extra": {
        "branch-alias": {
            "dev-master": "1.2-dev"
        }
    }
}
