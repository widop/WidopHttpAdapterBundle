{
    "name": "widop/http-adapter-bundle",
    "description": "Issue HTTP request.",
    "keywords": ["request", "http"],
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Widop",
            "email": "contact@widop.com"
        }
