    "suggest": {
        "kriswallsmith/buzz": "Allows you to use Buzz adapter",
        "ext-curl"          : "Allows you to use cURL adapter"
    },
    "autoload": {
        "psr-0": { "Widop\\HttpAdapterBundle": "" }
    },
    "target-dir": "Widop/HttpAdapterBundle"
}
