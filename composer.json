{
    "name": "widop/http-adapter-bundle",
    "description": "Issue HTTP request.",
    "keywords": [ "request", "http" ],
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Widop",
            "email": "contact@widop.com"
        },
        {
            "name": "Eric GELOEN",
            "email": "geloen.eric@gmail.com"
        }
    ],
    "require": {
        "symfony/framework-bundle": "2.*"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "kriswallsmith/buzz": "0.*"
    },
    "suggest": {
        "kriswallsmith/buzz": "Allows you to use Buzz adapter",
        "ext-curl"          : "Allows you to use cURL adapter"
    },
    "autoload": {
        "psr-0": { "Widop\\HttpAdapterBundle": "" }
    },
    "config": {
        "bin-dir": "bin"
    },
    "target-dir": "Widop/HttpAdapterBundle",
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
